<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sys1">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="10dp"
       android:background="@drawable/bg"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="160dp"
           android:background="@drawable/bank_itembg"
           android:backgroundTint="@color/purple_700"
           android:orientation="vertical"
           android:padding="10dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="16dp"
               android:padding="5dp"
               android:textColor="@color/white"
               android:text="RAM Info"
               android:layout_gravity="center"
               android:gravity="center"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/white"
               android:layout_marginHorizontal="90dp"
               android:layout_marginBottom="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_weight="0.5"
                   android:gravity="center_vertical"
                   android:text="Total RAM"
                   android:textSize="15sp" />

               <TextView
                   android:id="@+id/tram"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_weight="0.5"
                   android:gravity="right"
                   android:text="SAMSUNG"
                   android:textColor="@color/white"
                   android:textSize="15sp" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_weight="0.5"
                   android:gravity="center_vertical"
                   android:text="Used RAM"
                   android:textSize="15sp" />

               <TextView
                   android:id="@+id/uram"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_weight="0.5"
                   android:gravity="right"
                   android:text="SAMSUNG"
                   android:textColor="@color/white"
                   android:textSize="15sp" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_weight="0.5"
                   android:gravity="center_vertical"
                   android:text="Free RAM"
                   android:textSize="15sp" />

               <TextView
                   android:id="@+id/fram"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_weight="0.5"
                   android:gravity="right"
                   android:text="SAMSUNG"
                   android:textColor="@color/white"
                   android:textSize="15sp" />

           </LinearLayout>

       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:layout_height="135dp"
           android:background="@drawable/bank_itembg"
           android:backgroundTint="@color/purple_700"
           android:orientation="vertical"
           android:padding="10dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="16dp"
               android:padding="5dp"
               android:textColor="@color/white"
               android:text="Internal Storage Info"
               android:layout_gravity="center"
               android:gravity="center"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/white"
               android:layout_marginHorizontal="90dp"
               android:layout_marginBottom="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_weight="0.5"
                   android:gravity="center_vertical"
                   android:text="Total Space"
                   android:textSize="15sp" />

               <TextView
                   android:id="@+id/tspace"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_weight="0.5"
                   android:gravity="right"
                   android:text="SAMSUNG"
                   android:textColor="@color/white"
                   android:textSize="15sp" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_weight="0.5"
                   android:gravity="center_vertical"
                   android:text="Free Space"
                   android:textSize="15sp" />

               <TextView
                   android:id="@+id/fspace"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_weight="0.5"
                   android:gravity="right"
                   android:text="SAMSUNG"
                   android:textColor="@color/white"
                   android:textSize="15sp" />

           </LinearLayout>


       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="15dp"
           android:layout_width="match_parent"
           android:layout_height="135dp"
           android:background="@drawable/bank_itembg"
           android:backgroundTint="@color/purple_700"
           android:orientation="vertical"
           android:padding="10dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="16dp"
               android:padding="5dp"
               android:textColor="@color/white"
               android:text="External Storage Info"
               android:layout_gravity="center"
               android:gravity="center"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/white"
               android:layout_marginHorizontal="90dp"
               android:layout_marginBottom="10dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_weight="0.5"
                   android:gravity="center_vertical"
                   android:text="Total Space"
                   android:textSize="15sp" />

               <TextView
                   android:id="@+id/etspace"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_weight="0.5"
                   android:gravity="right"
                   android:text="SAMSUNG"
                   android:textColor="@color/white"
                   android:textSize="15sp" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:textColor="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_weight="0.5"
                   android:gravity="center_vertical"
                   android:text="Free Space"
                   android:textSize="15sp" />

               <TextView
                   android:id="@+id/efspace"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_weight="0.5"
                   android:gravity="right"
                   android:text="SAMSUNG"
                   android:textColor="@color/white"
                   android:textSize="15sp" />

           </LinearLayout>


       </LinearLayout>

   </LinearLayout>

</FrameLayout>