<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BinChecker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_700"
        android:orientation="horizontal">

        <Button
            android:id="@+id/arrow5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/left_arrow"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/purple_700"
            android:gravity="center"
            android:padding="10dp"
            android:text="What is a BIN number?"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="15dp"
        android:text="\n-> The issuing Bank Identification Number (BIN) is the first 6 digits – and with this change, 8 digits – of the Primary Account Number (PAN).\n\n-> The issuing BIN is used globally to identify the bank that issued the card."/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundcolor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Name"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Card Type"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/wifi"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="210dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/chip"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit1"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:hint="****"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/edit2"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:hint="****"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/edit3"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:hint="****"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext"
                    android:layout_marginLeft="20dp"
                    android:inputType="number"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:id="@+id/edit4"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:hint="****"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CARDHOLDER NAME"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="25dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>