<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tool_bar"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/mainname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/diamond"
                android:background="@drawable/button"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Get Diamond Tips"
                        android:textColor="@color/white"
                        android:fontFamily="@font/generalsans_bold"
                        android:layout_marginHorizontal="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Get Unlimited Diamonds"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/generalsans_regular"
                        android:layout_marginHorizontal="15dp"/>


                </LinearLayout>

            </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/character"
        android:layout_marginTop="5dp"
       android:background="@drawable/character"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Characters"
                android:textColor="@color/white"
                android:fontFamily="@font/generalsans_bold"
                android:layout_marginHorizontal="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="The most prestigious tech company on the continent"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/generalsans_regular"
                android:layout_marginHorizontal="15dp"/>


        </LinearLayout>


    </FrameLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/bundle"
                android:background="@drawable/bundle"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                   android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Bundles"
                        android:textColor="@color/white"
                        android:fontFamily="@font/generalsans_bold"
                        android:layout_marginHorizontal="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="The Night Clown Bundle is Popular bundles in the game"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/generalsans_regular"
                        android:layout_marginHorizontal="15dp"/>


                </LinearLayout>

            </FrameLayout>


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/adlayout">


                <RelativeLayout
                    android:layout_height="280dp"
                    android:layout_width="match_parent"
                    android:id="@+id/llAds">


                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@android:color/white">

                        <FrameLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/nativeAd"/>

                    </androidx.cardview.widget.CardView>

                    <com.facebook.ads.NativeAdLayout
                        android:id="@+id/native_ad_container"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:orientation="vertical" />

                </RelativeLayout>

                <!--FB Native-->
                <!--FB Native Over-->

            </RelativeLayout>


        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/para"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/parachute"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Parachute"
                        android:textColor="@color/white"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/generalsans_bold"
                        android:layout_marginHorizontal="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                       android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:text="Cobra"
                        android:fontFamily="@font/generalsans_regular"
                        android:layout_marginHorizontal="15dp"/>


                </LinearLayout>


            </FrameLayout>


            <FrameLayout
                android:id="@+id/emote"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/emote"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Emotes"
                        android:textColor="@color/white"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/generalsans_bold"
                        android:layout_marginHorizontal="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:text="Heart"
                        android:fontFamily="@font/generalsans_regular"
                        android:layout_marginHorizontal="15dp"/>


                </LinearLayout>


            </FrameLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/vehical"
                    android:layout_gravity="center"
                    android:gravity="center" >

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="Vehicles"
                            android:textColor="@color/white"
                            android:layout_marginTop="45dp"
                            android:fontFamily="@font/generalsans_bold"
                            android:layout_marginHorizontal="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:text="Sport car"
                            android:fontFamily="@font/generalsans_regular"
                            android:layout_marginHorizontal="15dp"/>


                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/pet"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/pets"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="Pets"
                            android:textColor="@color/white"
                            android:layout_marginTop="45dp"
                            android:fontFamily="@font/generalsans_bold"
                            android:layout_marginHorizontal="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:text="Enforcement"
                            android:fontFamily="@font/generalsans_regular"
                            android:layout_marginHorizontal="15dp"/>


                    </LinearLayout>


                </FrameLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>