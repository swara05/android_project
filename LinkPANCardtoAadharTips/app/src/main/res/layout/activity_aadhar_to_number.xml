<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_yellow"
    tools:context=".AadharToNumber">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/top_bar"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/bef1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/aadhar_to_number_link"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp">


        <TextView
            android:id="@+id/an1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/item_view"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/steps_to_link_aadhar_with_mobile_number_through_otp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/an2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/item_view"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/steps_to_link_aadhar_with_mobile_number_by_visiting_the_store_retailer"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/an3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/item_view"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/why_you_should_register_your_mobile_number_in_aadhar"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/an4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/item_view"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/fee_for_registering_your_mobile_number_in_aadhar"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/an5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/item_view"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/document_required_for_linking_aadhar_with_your_mobile_number"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/blue"/>

    </LinearLayout>

</LinearLayout>