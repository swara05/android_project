<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    tools:context=".SliderTwo"
    android:background="@drawable/main_bg"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:background="@drawable/top_bar"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/before1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:textStyle="bold"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_height="75dp"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <!-- Google Banner -->
                <LinearLayout
                    android:id="@+id/gBannerAds"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible" />
                <!-- Google Banner Over -->
            </LinearLayout>

            <!-- facebook banner -->
            <LinearLayout
                android:id="@+id/banner_container"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical" />
            <!-- facebook banner over -->

        </RelativeLayout>

        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">


            <LinearLayout
                android:background="@drawable/item_stoke"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/v2"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="21dp"
                    android:textColor="@color/purple_200"
                    android:text="Blood Pressure Tool"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:text="You can track the Blood Pressure easily and exactly on report."
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_marginBottom="5dp"
            android:layout_gravity="top">


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/adlayout">


                <RelativeLayout
                    android:layout_height="280dp"
                    android:layout_width="match_parent"
                    android:id="@+id/llAds">


                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@android:color/white">

                        <FrameLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/nativeAd"/>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <!--FB Native-->
                <com.facebook.ads.NativeAdLayout
                    android:id="@+id/native_ad_container"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:orientation="vertical" />
                <!--FB Native Over-->

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/slider2_next"
            android:background="@drawable/btn_style"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="NEXT"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>